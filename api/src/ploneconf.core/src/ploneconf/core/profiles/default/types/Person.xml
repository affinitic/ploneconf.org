<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    name="Person"
    meta_type="Dexterity FTI"
    i18n:domain="ploneconf.core">

  <!-- Basic properties -->
  <property i18n:translate="" name="title">Person</property>
  <property i18n:translate="" name="description">A Person in the Conference.</property>

  <property name="allow_discussion">False</property>
  <property name="factory">Person</property>
  <property name="icon_expr"/>
  <property name="link_target"/>

  <!-- Hierarchy control -->
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types"/>
  <!-- Schema, class and security -->
  <property name="add_permission">ploneconf.core.AddPerson</property>
  <property name="klass">ploneconf.core.content.person.Person</property>
  <property name="model_file">ploneconf.core.content:schemas/person.xml</property>
  <property name="model_source"/>
  <property name="schema"/>

  <!-- Enabled behaviors -->
  <property name="behaviors" purge="false">
    <element value="plone.namefromtitle"/>
    <element value="plone.excludefromnavigation"/>
    <element value="plone.leadimage"/>
    <element value="plone.shortname"/>
    <element value="plone.richtext"/>
    <element value="plone.basic"/>
  </property>

  <!-- View information -->
  <property name="add_view_expr">string:${folder_url}/++add++Person</property>
  <property name="default_view">view</property>
  <property name="default_view_fallback">False</property>
  <property name="immediate_view">view</property>
  <property name="view_methods">
    <element value="view"/>
  </property>

  <!-- Method aliases -->
  <alias
      from="(Default)"
      to="(dynamic view)"
  />
  <alias
      from="edit"
      to="@@edit"
  />
  <alias
      from="sharing"
      to="@@sharing"
  />
  <alias
      from="view"
      to="(selected layout)"
  />

  <!-- Actions -->
  <action
      action_id="view"
      category="object"
      condition_expr=""
      i18n:attributes="title"
      title="View"
      url_expr="string:${object_url}"
      visible="True">
    <permission value="View"/>
  </action>
  <action
      action_id="edit"
      category="object"
      i18n:attributes="title"
      title="Edit"
      url_expr="string:${object_url}/edit"
      visible="True">
    <permission value="Modify portal content"/>
  </action>

</object>